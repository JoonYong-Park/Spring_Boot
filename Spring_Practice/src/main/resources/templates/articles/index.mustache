{{>layouts/header}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        {{#articlesList}} <!-- 여러 데이터의 묶음이면 반복실행됨 -->
            <tr>
                <td>{{id}}</td>
                <td><a href="/articles/{{id}}">{{title}}</a></td>
                <td>{{content}}</td>
            </tr>
        {{/articlesList}}
    </tbody>
</table>
<a href="/articles/new">New Article</a>

{{>layouts/footer}}